\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{inclink}[2025/01/11 incog267's pkg for toc reverse links and image path]

\RequirePackage{hyperref}
\RequirePackage{titlesec}        % Section formatting
% Custom sectioning commands with TOC hyperlinking
\newcommand\mychapter[1]{%
  \chapter[#1]{\hyperlink{tocchapter.\thechapter}{#1}}}

\newcommand\mysection[1]{%
  \section[#1]{\hyperlink{tocsection.\thesection}{#1}}}

\newcommand\mysubsection[1]{%
  \subsection[#1]{\hyperlink{tocsubsection.\thesubsection}{#1}}}

% Modify TOC to include hyper targets
\let\oldcontentsline\contentsline
\renewcommand\contentsline[4]{%
  \oldcontentsline{#1}{\smash{\raisebox{1em}{\hypertarget{toc#4}{}}}#2}{#3}{#4}}

